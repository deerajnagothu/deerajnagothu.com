}

@inproceedings{zhao2024HomogeneousLowresolution,
	title = {A homogeneous low-resolution face recognition method using correlation features at the edge},
	volume = {13062},
	url = {https://www.spiedigitallibrary.org/conference-proceedings-of-spie/13062/130620F/A-homogeneous-low-resolution-face-recognition-method-using-correlation-features/10.1117/12.3008368.full},
