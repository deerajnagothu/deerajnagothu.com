@article{xu2021EconLedgerProofofENF,
  title = {EconLedger: A Proof-of-ENF Consensus Based Lightweight Distributed Ledger for IoVT Networks},
  abbr = {MDPI},
  shorttitle = {EconLedger},
  author = {Xu, Ronghua and Nagothu, Deeraj and Chen, Yu},
  year = {2021},
  month = oct,
